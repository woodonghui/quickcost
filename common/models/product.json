{
    "name": "Product",
    "base": "PersistedModel",
    "idInjection": true,
    "options": {
        "validateUpsert": true
    },
    "properties": {
        "name": {
            "type": "string",
            "required": true
        },
        "sku": {
            "type": "string",
            "required": false
        },
        "supplierid": {
            "type": "number",
            "required": true
        },
        "unitprice": {
            "type": "number",
            "required": true,
            "mysql": {
                "columnName": "unitprice",
                "dataType": "decimal"
            }
        },
        "unit": {
            "type": "string",
            "required": false
        }
    },
    "validations": [],
    "relations": {
        "supplier": {
            "type": "belongsTo",
            "model": "Supplier",
            "foreignKey": "supplierid"
        },
        "costRecords": {
            "type": "hasMany",
            "model": "CostRecord",
            "foreignKey": "productid"
        }
    },
    "acls": [],
    "methods": {}
}
